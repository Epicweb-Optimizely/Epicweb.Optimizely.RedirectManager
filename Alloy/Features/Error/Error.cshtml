@{
    Layout = "";// "~/Features/Shared/Views/Layout/_ErrorLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 align-self-center">
        <h1>@ViewBag.Code</h1>
        @if(ViewBag.Code == 500){
        <h2>UH OH! Error.</h2>
        <p>
            There is an error on server side. We are fixing it. But you can click the button below
            to go back to the homepage.
        </p>
        }
        else
        {
        <h2>UH OH! You're lost.</h2>
        <p>
            The page you are looking for does not exist.
            How you got here is a mystery. But you can click the button below
            to go back to the homepage.
        </p>
        }

        <a href="@Url.Content("~/")" class="btn green">HOME</a>
    </div>
</div>